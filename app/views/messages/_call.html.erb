<div class="new-message-modal container d-flex flex-column" >
  <div class="hero-text text-center w-50">
    <h1>Call</h1>
  </div>
  <%= button_tag data: {
      action: "click->show-on-click#toggle"
    }, class: "button-close" do %>
    <i class="fas fa-times"></i>
  <% end %>
  <div class="call-modal text-center">
    <div class="text-center mt-5">
      <h1><%= @space.user.first_name.capitalize %></h1>
      <p>Initiating call...</p>
    </div>
    <div class="pulse">
      <%= image_tag(@space.user.photo, :alt => "profile photo", :class => "") %>
    </div>
    <div class="end-call">
      <i class="fas fa-phone-slash"></i>
    </div>
  </div>
</div>
